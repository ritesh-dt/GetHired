				{% for skill, icon in [("20,000 / month", "fas fa-rupee-sign"), ("Full-time", "fas fa-clock"), ("Pune, India", "fas fa-map-marker-alt")] %}
				<div class="col-lg-4 col-12 text-center my-2 h5"><i class="{{ icon }} fa-lg text-warning"></i>&nbsp; {{ skill }}</div>
				{% endfor %}
			</div> -->
